@{
    ViewBag.Title = "ES - Giris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="home_banner_area" class="home_banner_area">
    <div class="container box_1620">
        <div class="main_title center">
            <h2>Giris</h2>
            @using (Html.BeginForm("Giris", "Index", new { }, FormMethod.Post))
            {
                @((ViewBag.Mesaj != null) ? ViewBag.Mesaj : "")
                <div class="mt-10">
                    <input type="text" name="id" placeholder="Kullanıcı Adı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Kullanıcı Adı'" required="" class="single-input" style="background-color: darkgrey">
                </div>
                <div class="mt-10">
                    <input type="password" name="pass" placeholder="Şifre" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Şifre'" required="" class="single-input" style="background-color: darkgrey">
                </div>
                <div class="mt-10">
                    <button type="submit" class="genric-btn success e-large">GİRİŞ</button>
                </div>
            }
        </div>
    </div>
</section>
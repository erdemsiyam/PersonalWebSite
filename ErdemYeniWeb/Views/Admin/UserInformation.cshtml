@{
    ViewBag.Title = "User Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using ErdemYeniWeb.Models.Site
@using ErdemYeniWeb.ViewModels
@model AdminUserInformationModel
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Skills
            </header>
            <table id="skillTable" class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-reorder"></i></th>
                        <th><i class="icon-code"></i>  Name</th>
                        <th><i class="icon-thumbs-up"></i>  Percent</th>
                        <th><i class="icon-remove"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Skill item in Model.skills)
                    {
                        <tr id="@item.Id">
                            <td></td>
                            <td>@item.Name</td>
                            <td>@item.Percent</td>
                            <td>
                                <a class="btn btn-danger btn-xs" onclick="informationDelete('Skill','@(item.Id)')"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td> NEW</td>
                        <td>
                            <input id="newSkillName" name="newSkillName" type="text" class="form-control">
                        </td>
                        <td>
                            <input id="newSkillPercent" name="newSkillPercent" type="text" class="form-control">
                        </td>
                        <td>
                            <a class="btn btn-success" onclick="informationAdd('Skill')" id="skillAdd">Add</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>

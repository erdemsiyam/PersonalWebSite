@{
    ViewBag.Title = "Exception Logs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using ErdemYeniWeb.ViewModels
@using ErdemYeniWeb.Models.Site
@model AdminExceptionLogsModel
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Exception Logs
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th class="numeric">Content</th>
                                <th class="numeric">ClassPath</th>
                                <th class="numeric">ExceptionTime</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ExceptionLog item in Model.logs)
                            {
                                <tr id="@item.Id">
                                    <td class="numeric">@item.Content</td>
                                    <td class="numeric">@item.ClassPath</td>
                                    <td class="numeric">@item.ExceptionTime</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="dataTables_info" id="editable-sample_info">20 comments showing per page (Total comments count is @Model.itemCount)</div>
    </div>
    <div class="col-lg-6">
        <div class="dataTables_paginate paging_bootstrap pagination">
            <ul>
                <li class="prev @((Model.selectPage == Model.minPage)? "disabled":"")">
                    <a href="@Url.Action("Logs","Admin",new { id = Model.selectPage-1})">← Prev</a>
                </li>
                @for (int i = Model.minPage; i <= Model.totalPage; i++)
                {
                    <li class="@((Model.selectPage == i)?"active":"")">
                        <a href="@Url.Action("Logs","Admin",new { id = i})">@((i < 10) ? "0" + i.ToString() : i.ToString())</a>
                    </li>
                }
                <li class="next @((Model.selectPage >= Model.totalPage)? "disabled":"")">
                    <a href="@Url.Action("Logs","Admin",new { id = Model.selectPage+1})">Next → </a>
                </li>
            </ul>
        </div>
    </div>
</div>
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('Facebook')">Save</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="curl" class="control-label col-lg-2">Twitter Link</label>
                        <div class="col-lg-8">
                            <input class="form-control " id="Twitter" type="url" name="Twitter" value="@Model.Twitter">

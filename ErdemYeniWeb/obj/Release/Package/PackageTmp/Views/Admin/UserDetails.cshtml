                        <label for="cemail" class="control-label col-lg-2">Auto-Email : HOST</label>
                        <div class="col-lg-8">
                            <input class="form-control " id="AutoMailHost" type="text" name="AutoMailHost" value="@Model.AutoMailHost">
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('AutoMailHost')">Save</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Auto-Email : PORT </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="AutoMailPort" name="AutoMailPort" value="@Model.AutoMailPort">
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('AutoMailPort')">Save</a>

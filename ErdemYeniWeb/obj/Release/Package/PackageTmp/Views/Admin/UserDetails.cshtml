@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using ErdemYeniWeb.Models.Site
@model User
@{
    bool isThereBigPic = Model.BigPicturePath != String.Empty;
    bool isThereLitPic = Model.SmallPicturePath != String.Empty;
}
<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
                Images Of The User
                <span class="tools pull-right">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </header>
            <div class="panel-body">
                <form action="#" class="form-horizontal tasi-form">
                    <div class="form-group">
                        <label class="control-label col-md-3">Big Picture <br /> (Recomended : 668x690)</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="col-md-6 thumbnail" id="bigPictureUploaded">
                                    @if (isThereBigPic)
                                    {
                                        <img id="bigPicture" src="~/Images/User/@Model.BigPicturePath" alt="Current Image">
                                    }
                                    else
                                    {
                                        <img id="bigPicture" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="No Image">
                                    }
                                </div>
                                <div class="col-md-6">
                                    <div id="bigPicturePreview" class="thumbnail" style="display:none">
                                        <img id="bigPictureTarget" class="img-responsive" alt="Ready Image">
                                        <span id="bigPictureDescription" class="fileupload-new"></span><br />
                                        <a href="#" class="btn btn-shadow btn-danger" onclick="ClearPreview('big')">Delete</a>
                                        <a href="#" class="btn btn-shadow btn-primary" onclick="bigPictureUpload()">Upload</a>
                                    </div>
                                    <span class="btn btn-white btn-file" style="margin-left:10px;">
                                        <span class="fileupload-new"><i class="icon-paper-clip"></i> Select New Image</span>
                                        <input id="bigPictureFile" name="bigPictureFile" type="file" class="default">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Small Picture <br /> (Recomended : 120x120)</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="col-md-6 thumbnail" id="smallPictureUploaded">
                                    @if (isThereLitPic)
                                    {
                                        <img id="smallPicture" src="~/Images/User/@Model.SmallPicturePath" alt="Current Image">
                                    }
                                    else
                                    {
                                        <img id="smallPicture" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="No Image">
                                    }
                                </div>
                                <div class="col-md-6">
                                    <div id="smallPicturePreview" class="thumbnail" style="display:none">
                                        <img id="smallPictureTarget" class="img-responsive" alt="Ready Image">
                                        <span id="smallPictureDescription" class="fileupload-new"></span><br />
                                        <a href="#" class="btn btn-shadow btn-danger" onclick="ClearPreview('small')">Delete</a>
                                        <a href="#" class="btn btn-shadow btn-primary" onclick="smallPictureUpload()">Upload</a>
                                    </div>
                                    <span class="btn btn-white btn-file" style="margin-left:10px;">
                                        <span class="fileupload-new"><i class="icon-paper-clip"></i> Select New Image</span>
                                        <input id="smallPictureFile" name="smallPictureFile" type="file" class="default">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                English CV Upload
            </header>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <input type="file" id="englishCv">
                    </div>
                </form>

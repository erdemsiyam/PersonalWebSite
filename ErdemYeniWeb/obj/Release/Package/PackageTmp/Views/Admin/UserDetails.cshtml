                            <a class="form-control btn btn-success" onclick="detailUpload('About1')">Save</a>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="ccomment" class="control-label col-lg-2">About 2</label>
                        <div class="col-lg-8">
                            <textarea class="form-control " id="About2" name="About2">@Model.About2</textarea>
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('About2')">Save</a>

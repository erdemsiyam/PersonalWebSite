                            <a class="form-control btn btn-success" onclick="detailUpload('Instagram')">Save</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="curl" class="control-label col-lg-2">Linkedin Link</label>
                        <div class="col-lg-8">
                            <input class="form-control " id="Linkedin" type="url" name="Linkedin" value="@Model.Linkedin">
                            <span class="help-block">Https://www.linkedin.com/nickname</span>
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('Linkedin')">Save</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="curl" class="control-label col-lg-2">Github Link</label>
                        <div class="col-lg-8">
                            <input class="form-control " id="Github" type="url" name="Github" value="@Model.Github">
                            <span class="help-block">Https://www.github.com/nickname</span>
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('Github')">Save</a>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="ccomment" class="control-label col-lg-2">About 1</label>
                        <div class="col-lg-8">
                            <textarea class="form-control " id="About1" name="About1">@Model.About1</textarea>

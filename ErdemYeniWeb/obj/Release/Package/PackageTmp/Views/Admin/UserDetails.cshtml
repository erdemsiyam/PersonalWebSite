<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Auto Email
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="get">

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Auto-Email : Open / Close </label>

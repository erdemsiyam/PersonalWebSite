                            <a class="form-control btn btn-success" onclick="detailUpload('AutoMail')">Save</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Auto-Email : Mail Pass</label>
                        <div class="col-sm-8">
                            <input type="text" id="AutoMailPass" name="AutoMailPass" class="form-control" value="@Model.AutoMailPass">
                        </div>
                        <div class="col-sm-2">
                            <a class="form-control btn btn-success" onclick="detailUpload('AutoMailPass')">Save</a>
                        </div>
                    </div>

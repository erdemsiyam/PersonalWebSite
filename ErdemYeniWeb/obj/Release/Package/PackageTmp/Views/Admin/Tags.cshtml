@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using ErdemYeniWeb.Models.Blog
@model List<Tag>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Tags
            </header>
            <table id="tagTable" class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-reorder"></i></th>
                        <th><i class="icon-code"></i>  Name</th>
                        <th><i class="icon-code"></i>  PicturePath</th>
                        <th><i class="icon-remove"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Tag item in Model)
                    {
                        <tr id="@item.Id">
                            <td></td>
                            <td>@item.Name</td>
                            <td>@item.PicturePath</td>
                            <td>
                                <a class="btn btn-primary btn-xs" onclick="tagEditOpen('@(item.Id)')"><i class="icon-pencil"></i></a>
                                <a class="btn btn-danger btn-xs" onclick="tagDelete('@(item.Id)')"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td> NEW</td>
                        <td>
                            <input id="newTagName" name="newTagName" type="text" class="form-control">
                        </td>
                        <td>
                            (Recomended 750x350)<input id="newTagPic" type="file" />
                        </td>
                        <td>
                            <a class="btn btn-success" onclick="tagAdd()" id="tagAddButton">Add</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>
@Scripts.Render("~/js/admin/Tags")